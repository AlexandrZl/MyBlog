<h1>New Post</h1>
  <div class="row">
    <div class="col-sm-4 col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">                
          <form action="/posts" method="post">
          	<label for="post_title">Title:</label><br />
            <textarea id="post_title" class="form-control counted" name="post[title]" type="text"  rows="1" value="<%= @post.title %>" /></textarea>
             <br />
            <label for="post_body">Body:</label><br />
            <textarea id="post_body" class="form-control counted"  name="post[body]" rows="5"><%= @post.body %></textarea>
            <br />
            <input type="submit" class="btn btn-info" value="Create Post" />
          </form>
        </div>
      </div>
    </div>
</div>