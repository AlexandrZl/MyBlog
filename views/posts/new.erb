<h1>New Post</h1>
  <div class="row">
    <div class="col-sm-4 col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">                
          <form action="/posts" method="post">
            <label for="post_title">Title:</label><br />
            <textarea  class="form-control counted" id="name" name="title" type="text"  rows="1" ></textarea>
             <br />
            <label >Body:</label><br />
            <textarea  class="form-control counted" id="body"  name="body" rows="5"></textarea>
            <br />
            <input type="submit" class="btn btn-info" value="Create Post" />
          </form>
        </div>
      </div>
    </div>
</div>