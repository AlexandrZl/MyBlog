<h1>New Post</h1>
  <div class="row">
    <div class="col-sm-4 col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">                
          <form action="/posts" method="post">
            <label for="post_title">Title:</label><br />
            <input type="text" value="<%= @post.title if @post %>" id="title" name="title" placeholder="" class="form-control counted">
             <br />
             <% if @post.errors%>
              <% @post.errors[:title].each do |title| %>
                <p class="help-block"><%= title %></p>
              <% end %>
            <% end %>
            <label >Body:</label><br />
            <textarea  class="form-control counted" id="body"  name="body" rows="5"></textarea>
            <br />
            <% if @post.errors%>
              <% @post.errors[:body].each do |body| %>
                <p class="help-block"><%= body %></p>
              <% end %>
            <% end %>            
            <input type="submit" class="btn btn-info" value="Create Post" />
          </form>
        </div>
      </div>
    </div>
</div>