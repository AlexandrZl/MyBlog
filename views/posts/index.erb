<h1>Welcome to my blog!</h1>
<section>
<% @posts.each do |post| %>
  <article>
    <h2><a href="/posts/<%= post.id %>"><%= post.title %></a>
    <h4>Created by <%= h post.user_name %></h4>
    <span><%= h pretty_date(post.created_at) %></span></h2>
    <p><%= h post.body[0, 400]+"..." %></p>
    <a href="/posts/<%= post.id %>"  class="btn btn-primary pull-right">Read more...</a>
  </article>
<% end %>
</section>
